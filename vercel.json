{
  "version": 2,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "rewrites": [
    { "source": "/login", "destination": "/login.html" },
    { "source": "/index", "destination": "/index.html" },
    { "source": "/index.html", "destination": "/index.html" },
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/admin.html", "destination": "/admin.html" },
    { "source": "/produtos", "destination": "/produtos.html" },
    { "source": "/produtos.html", "destination": "/produtos.html" },
    { "source": "/estoque", "destination": "/estoque.html" },
    { "source": "/estoque.html", "destination": "/estoque.html" },
    { "source": "/leitura-z", "destination": "/leitura-z.html" },
    { "source": "/leitura-z.html", "destination": "/leitura-z.html" },
    { "source": "/sangria", "destination": "/sangria.html" },
    { "source": "/sangria.html", "destination": "/sangria.html" },
    { "source": "/relatorios", "destination": "/relatorios.html" },
    { "source": "/relatorios.html", "destination": "/relatorios.html" },
    { "source": "/cupom", "destination": "/cupom.html" },
    { "source": "/cupom.html", "destination": "/cupom.html" }
  ],
  "redirects": [
    { "source": "/home", "destination": "/index.html", "permanent": true },
    { "source": "/main", "destination": "/index.html", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/login.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}
